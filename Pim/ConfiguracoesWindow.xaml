<Window x:Class="Pim_04.Views.ConfiguracoesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="DeskPro - Configurações" Height="600" Width="1000"
        WindowState="Maximized"
        Background="#1E1E1E"
        ResizeMode="CanResize" MinWidth="800" MinHeight="500">
    <Window.Resources>
        <!-- Reutilizar estilos da TelaPrincipal -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
        <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Style="{StaticResource CardStyle}" Grid.Column="0" Margin="10,10,10,10">
                <StackPanel Background="#2D2D2D" Margin="-6,0,-6,0">
                    <TextBlock Text="Menu"
                               FontSize="20" FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center" Margin="0,10,0,20"/>
                    <Button x:Name="btnVoltar" Click="BtnVoltar_Click" Style="{StaticResource SidebarButton}" Width="130" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowLeft" Margin="5,0,3,0"/>
                            <TextBlock Text="Voltar" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <Border Style="{StaticResource CardStyle}" Grid.Column="1" Margin="10,10,20,20">
                <StackPanel>
                    <TextBlock Text="Configurações"
                               FontSize="28" FontWeight="SemiBold"
                               Foreground="#D4D4D4" Margin="40,10,0,20" Width="293"/>

                    <!-- Informações do Usuário -->
                    <TextBlock Text="Informações do Usuário"
                               FontSize="20" FontWeight="Bold"
                               Foreground="White" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Nome:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="txtNome" Background="#3D3D3D" Foreground="White" BorderBrush="#4A90E2" BorderThickness="1" Padding="5" Margin="0,0,10,0" Width="300"/>
                        <TextBlock Text="E-mail:" Foreground="White" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,10,0"/>
                        <TextBox x:Name="txtEmail" Background="#3D3D3D" Foreground="White" BorderBrush="#4A90E2" BorderThickness="1" Padding="5" Width="300" Grid.Column="1"/>
                    </Grid>

                    <!-- Lista de Usuários (apenas para admin) -->
                    <TextBlock x:Name="txtUsuariosTitle" Text="Gerenciar Usuários"
                               FontSize="20" FontWeight="Bold"
                               Foreground="White" Margin="0,0,0,10" Visibility="Collapsed"/>
                    <DataGrid x:Name="dgUsuarios" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                              Margin="0,0,0,20" Visibility="Collapsed"
                              Background="#2D2D2D"
                              Foreground="White"
                              BorderBrush="#3D3D3D"
                              BorderThickness="1"
                              RowBackground="#252526"
                              AlternatingRowBackground="#2D2D2D"
                              ColumnHeaderStyle="{StaticResource HeaderStyle}"
                              CellStyle="{StaticResource CellStyle}"
                              IsReadOnly="False"
                              BeginningEdit="DgUsuarios_BeginningEdit" CellEditEnding="DgUsuarios_CellEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Nome" Binding="{Binding Username}" Width="*"/>
                            <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="2*"/>
                            <DataGridCheckBoxColumn Header="Administrador" Binding="{Binding IsAdmin, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Botões -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                        <Button x:Name="btnSalvar" Click="BtnSalvar_Click" Content="Salvar" Width="100" Height="35" Background="#4A90E2" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0" Visibility="Collapsed"/>
                        <Button x:Name="btnCancelar" Click="BtnVoltar_Click" Content="Cancelar" Width="100" Height="35" Background="Red" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>